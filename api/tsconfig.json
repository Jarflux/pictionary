{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["es2016", "dom"],
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es6"
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true
  },
  "exclude": [
    "node_modules"
  ]
}
