{
  "rules": {
    "words": {
      ".read": false,
      ".write": false
    },
    "rooms": {
      ".read": true,
      ".write": true,
      "$uid": {
        ".read": true,
        ".write": false,
        "players": {
          ".read": true,
          ".write": false,
          "$uid": {
            ".read": true,
            ".write": "$uid === auth.uid"
          }
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "profileInfo": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "secure": {
          ".read": false,
          ".write": false
        }
      }
    },
    ".read": false,
    ".write": false
  }
}

